{
  "name": "sitemap-generator-cli",
  "version": "7.2.0",
  "description": "Create xml sitemaps from the command line.",
  "homepage": "https://github.com/lgraubner/sitemap-generator-cli",
  "author": {
    "name": "Lars Graubner",
    "email": "mail@larsgraubner.de",
    "url": "http://larsgraubner.de"
  },
  "keywords": [
    "sitemap",
    "xml",
    "sitemap.xml",
    "generator",
    "crawler",
    "seo",
    "google",
    "ecosystem:node"
  ],
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/lgraubner/sitemap-generator-cli.git"
  },
  "bugs": {
    "url": "https://github.com/lgraubner/sitemap-generator-cli/issues"
  },
  "dependencies": {
    "chalk": "2.3.2",
    "commander": "2.15.1",
    "sitemap-generator": "8.3.0"
  },
  "devDependencies": {
    "eslint": "4.19.1",
    "execa": "0.10.0",
    "husky": "0.14.3",
    "jest": "22.4.3",
    "lint-staged": "7.0.4",
    "prettier": "1.11.1"
  },
  "preferGlobal": true,
  "engines": {
    "node": ">=6"
  },
  "bin": {
    "sitemap-generator": "index.js"
  },
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "test": "jest",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "extends": [
      "eslint:recommended"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "no-console": 0
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
